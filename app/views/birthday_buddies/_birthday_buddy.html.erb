<turbo-frame id="<%= dom_id birthday_buddy %>"  class="flex justify-between gap-5">
  <%# Full Name %>
  <span class="max-w-sm leading-6 text-lg md:text-xl text-secondary-900 dark:text-secondary-200">
    <%= birthday_buddy.first_name %>
  </span>

  <%# Actions %>
  <div class="flex gap-5 md:gap-6 lg:gap-7">
    <%# Show Modal %>
    <button data-modal-toggle="<%= dom_id(birthday_buddy, "show") %>" data-action= "click->dialog#openShowModal">Show</button>
  </div>

  <%= render "show_dialog", birthday_buddy: birthday_buddy %>
</turbo-frame>


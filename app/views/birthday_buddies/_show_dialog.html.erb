<dialog id="<%= dom_id(birthday_buddy, "show") %>" class="dark:bg-gray-800 bg-primary-100 rounded-lg shadow backdrop:backdrop-blur-sm space-y-4 md:space-y-5 lg:space-y-6 p-4 sm:p-5">
  <%# Header %>
  <div class="flex justify-between mb-4 rounded-t sm:mb-5">
    <%# Heading %>
    <div class="text-lg text-gray-900 md:text-xl dark:text-white">
      <h3 class="font-semibold ">
       <%=  birthday_buddy.first_name %>
      </h3>
      <h4>
       <%=  birthday_buddy.last_name %>
      </h4>
    </div>

    <!-- Close Button-->
    <button data-action="click->dialog#closeShowModal" data-modal-toggle="<%= dom_id(birthday_buddy, "show") %>" class="text-primary-400 absolute top-2.5 right-2.5 bg-transparent hover:bg-primary-200 hover:text-primary-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-primary-600 dark:hover:text-primary-200">
      <%= render "shared/svg/x_mark", classes: "size-5" %>
    </button>
  </div>

    <hr class="divider w-3/4">

  <%# Other detials %>
  <dl class="max-w-md">
      <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Gregorian Birthday</dt>
      <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= birthday_buddy.gregorian_birthday %></dd>
      <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Hijri Waras</dt>
      <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400">Electronics/PC</dd>
  </dl>

  <%# Action %>
  <div class="flex justify-between items-center space-x-4">
    <%#  Edit %>
    <%= button_to edit_birthday_buddy_path(birthday_buddy), method: :get, class:"text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" do %>
      <svg aria-hidden="true" class="mr-1 -ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
        Edit
    <%end %>
    <form>
      <button formmethod="dialog" class="px-5 py-2.5 text-sm font-medium rounded-lg border focus:ring-4 focus:outline-none  focus:z-10 focus:ring-primary-300 text-primary-500 bg-white border-primary-200 hover:bg-secondary-100 hover:text-primary-900 dark:bg-gray-700 dark:text-primary-100 dark:border-secondary-500 dark:hover:text-primary-50 dark:hover:bg-gray-600 dark:focus:ring-gray-600">
          Close
      </button>
    </form>
  </div>
</dialog>
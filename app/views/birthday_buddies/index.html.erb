<section class="grid w-full sm:w-3/4 md:max-w-md">
  <%# Validation Error Messages %>
  <%= render "devise/shared/error_messages", resource: @birthday_buddy %>

  <%# New birthday_buddy form %>
  <%= render "form", buddy: @birthday_buddy %>
</section>

<%# divider %>
<hr class="divider">

<%# Birthdays %>
<% if @birthday_buddies.present? %>
  <article data-controller="dialog" class= "w-full sm:max-w-md  grid justify-items-stretch gap-8 md:gap-14">
    <h2 class="font-semibold text-2xl md:text-3xl tracking-wide text-center text-primary-950 dark:text-primary-100">🎂&nbsp;&nbsp;Upcoming birthdays! &nbsp;&nbsp;🎉</h2>

    <%= turbo_stream_from current_user %>
    <div id="birthday_buddies" class="grid gap-8 md:gap-12">
      <%= render @birthday_buddies %>
    </div>
  </article>
<% end %>